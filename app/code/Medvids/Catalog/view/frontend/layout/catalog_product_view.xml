<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block name="product.demo.notice.message"
                   before="product.info.details"
                   class="Medvids\Catalog\Block\Product\View\DemoMessage"
                   template="Medvids_Catalog::product/view/demo_notice.phtml">
                <arguments>
                    <argument name="demo_message" xsi:type="string">This is a demo product. You can add them to cart and place order only to test the Magento capabilities</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
