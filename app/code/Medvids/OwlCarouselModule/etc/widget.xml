<?xml version="1.0" encoding="UTF-8"?>

<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="medvids_oulcarousel_widget" class="Medvids\OwlCarouselModule\Block\Widget\Block" >
        <label translate="true">Owl Carousel Widget</label>
        <description translate="true">Add OwlCarousel to the page</description>
        <parameters>
            <parameter name="block_id" xsi:type="block" visible="true" required="true" sort_order="20">
                <label translate="true">Block</label>
                <block class="Magento\Cms\Block\Adminhtml\Block\Widget\Chooser">
                    <data>
                        <item name="button" xsi:type="array">
                            <item name="open" xsi:type="string" translate="true">Select Block...</item>
                        </item>
                    </data>
                </block>
            </parameter>
            <parameter name="carousel_id" required="true" visible="true" sort_order="10" xsi:type="text">
                <label>Carousel Identifier</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
