<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block name="dealer_register_button"
                   class="Magento\Framework\View\Element\Template"
                   after="customer_form_register"
                   template="Medvids_DealerAccountCreate::register_dealer.phtml" />
            <container name="register-dealer-modal"
                       htmlTag="div"
                       htmlClass="modal"
                       htmlId="dealerRegisterModal">
                <block class="Magento\Customer\Block\Form\Register" name="dealer_form_register" template="Magento_Customer::form/register.phtml">
                    <arguments>
                        <argument name="attribute_data" xsi:type="object">Magento\Customer\Block\DataProviders\AddressAttributeData</argument>
                    </arguments>
                </block>
            </container>
        </referenceContainer>
   </body>
</page>
